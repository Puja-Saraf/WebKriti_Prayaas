name: Node.js CI

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - name: Use Node.js
      uses: actions/setup-node@v3
      
      - name: Install dependencies
      run: npm install
        with:
          node-version: '16.x'
      - run: npm ci
      - run: npm run deploy --if-present
